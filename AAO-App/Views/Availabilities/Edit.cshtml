@model AAO_App.Models.Availability

@{
    ViewData["Title"] = "Edit";
    Layout = "_CrudLayout";
}

<div class="w3-container">
    <h1 class="opret_periode">Rediger Periode</h1>
    <form asp-action="Edit">
        <div class="form-group">
            <label asp-for="Start" class="control-label">Start Dato</label>
            <input asp-for="Start" class="form-control" />
            <span asp-validation-for="Start" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="End" class="control-label">Slut Dato</label>
            <input asp-for="End" class="form-control" />
            <span asp-validation-for="End" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="AvailabilityType" class="control-label">Type</label>
            <select asp-for="AvailabilityType" class="form-control">
                <option value="0">Ledig</option>
                <option value="1">Optaget</option>
            </select>
            <span asp-validation-for="AvailabilityType" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>
</div>

<a class="back_list" style="font-size:20px;color:black;" asp-action="Index">@*<i style="font-size:24px" class="fa">*@< Back @*</i>*@ </a>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
