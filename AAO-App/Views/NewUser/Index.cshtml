@model AAO_App.ModelView.DriverViewModel
@{
    Layout = "_NewUser";
    ViewData["Title"] = "Create New User";
}

<img id="Icon" src="images/logo.svg" alt="Alex Andersen logo" />

<div id="DotHolder">

</div>

<form id="CreateUserForm" method="POST" asp-controller="NewUser" asp-action="Index" enctype="multipart/form-data">

    <div class="Formula Displayed">
        <label>Fornavn</label>
        <input asp-for="Firstname">
        <label>Efternavn</label>
        <input asp-for="Lastname">
        <label>Telefon nr</label>
        <input asp-for="Phone">
        <label>Bopæl</label>
        <input asp-for="Address">
        <label>FødselsDato</label>
        <input asp-for="Birthday">
        <div class="ButtonContainer" style="justify-content: normal;">

            <a href="/Login/Index" class="ButtonModal" style="margin-right: 270px; margin-left: 15px; text-align: center; text-decoration: auto;">Tilbage</a>
            <button type="button" id="Next" onclick="NextSlide()" class="ButtonModal" >Næste</button>

        </div>
    </div>

    <div class="Formula">
        <label asp-for="Location" class="control-label">Adresse by</label>
        <input asp-for="Location" class="form-control" />
        <span asp-validation-for="Location" class="text-danger"></span>
        <label asp-for="CityId" class="control-label">Præference for lokation</label>
        <select asp-for="CityId" class="form-control" asp-items="ViewBag.CityName">
            <option value="">-- Select --</option>
        </select>
        <span asp-validation-for="CityId" class="text-danger"></span>

        <label asp-for="Password" class="control-label"></label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>

        <label asp-for="file" class="control-label"></label>
        <input asp-for="file" type="file" class="form-control" />
        <span asp-validation-for="file" class="text-danger"></span>

        <div class="ButtonContainer" id="SecondContainer">
            <button type="button" id="Prev" onclick="PrevSlide()" class="ButtonModal">Tilbage</button>
           
            <input type="Submit" value="Anmod om registrering" class="WideButton">
        </div>
    </div>
    </form>

    <script src="../../js/Modal.min.js"></script>
    <script src="../../js/CreateUserScript.min.js"></script>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
