@model AAO_App.Models.Driver

@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_Master.cshtml";
    var item = Model;
}

<link href="~/css/Profile.css" rel="stylesheet" type="text/css" />


<h1 id="Profil">Profil</h1>
<div class="wrap_around" style="display: inline-block; width: 112px; position: relative; left: 46%;">
    <img id="UserPic" src="@string.Format("data:image/jpg;base64,{0}",Convert.ToBase64String(item.ProfileImage))" alt="ProfilePic" style="width: 100%; border-radius: 50%; border: 2px solid #000;" />
</div>
 
    <div id="TextBody">
        <div class="wrap_around">
            <h2 class="ProfileSpace" id="Stamdata">Stamdata</h2>
            <p>
                <a class="edit_icon" asp-action="Edit" asp-route-id="@item.DriverId"><i style="font-size:24px" class="fa">&#xf040;</i></a>
            </p>
        </div>
        <div class="ProfileSpace" id="ProfName">Navn:  @item.Firstname @item.Lastname </div>
        <div class="ProfileSpace" id="ProfAddress"> Addresse:  @item.Address </div>
        <div class="ProfileSpace" id="ProfKørekort"> Kørekort oplysninger: </div>

        <div class="wrap_around">
            <h2 class="ProfileSpace" id="ProfPreferencer">Dine præferencer</h2>
            @*<p>
                    <a asp-action="Edit" asp-route-id="@item.DriverId"><i style="font-size:24px" class="fa">&#xf040;</i></a>
                </p>*@
        </div>
        <div class="ProfileSpace" id="ProfLokation"> Lokation:  @item.Location </div>
        <div class="ProfileSpace" id="ProfLokation"> Type: National</div>
    </div>
        
 



